<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        >
        <ImageView
            android:id="@+id/team1Image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/realmadridsmall"
            android:padding="3pt"></ImageView>
        <TextView
            android:id="@+id/matchTeam1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real Madrid"
            android:textSize="8pt"
            android:padding="4pt"
            android:maxWidth="110pt"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/team1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/matchTeam1Name"
            android:gravity="right"
            android:text="18/12/2020"
            android:padding="4pt"
            android:textSize="8pt"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:layout_weight="1"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin1">
        <ImageView
            android:id="@+id/team2Image"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/realmadridsmall"
            android:padding="3pt"></ImageView>
        <TextView
            android:id="@+id/matchTeam2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/matchTeam1Name"
            android:text="FC Barcelona"
            android:padding="4pt"
            android:textSize="8pt"
            android:maxWidth="110pt"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/team2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/matchDate"
            android:background="#FFFFFF"
            android:gravity="right"
            android:padding="4pt"
            android:text="9:30 pm"
            android:textSize="8pt"
            android:textStyle="italic"
            android:layout_weight="1"></TextView>
    </LinearLayout>
</RelativeLayout>
